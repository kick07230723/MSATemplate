<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="LOGS_ABSOLUTE_PATH" value="logs" />
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <appender class="ch.qos.logback.core.ConsoleAppender" name="STDOUT">
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5level][${springAppName:-}][%class.%method:%line][%X{X-B3-TraceId:-}][%X{X-B3-SpanId:-}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_ABSOLUTE_PATH}/green-api.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}][%-5level][${springAppName:-}][%method:%line][%X{X-B3-TraceId:-}][%X{X-B3-SpanId:-}] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS_ABSOLUTE_PATH}/green-api.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="com.nuri.green" level="debug">
    </logger>

    <root level="debug">
        <appender-ref ref="file"></appender-ref>
        <appender-ref ref="STDOUT"> </appender-ref>
    </root>

    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>